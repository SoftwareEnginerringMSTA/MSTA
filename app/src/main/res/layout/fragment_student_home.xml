<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:id="@+id/view"
        card_view:cardBackgroundColor="#558B2F"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:src="@drawable/prescious"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Name: Frederick Prescious Alago"
            android:id="@+id/textView4"
            android:textColor="#Ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="125dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Student ID: 2013007248"
            android:textColor="#Ffffff"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="125dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Course &amp; Yr.: BSIT - 3"
            android:textColor="#ffffff"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="125dp" />
    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="#558B2F"
        android:id="@+id/view2"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView4"
            android:src="@drawable/mampets"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Name: Josephine Petralba"
            android:id="@+id/textView5"
            android:textColor="#Ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="125dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Number of Advising:"
            android:textColor="#Ffffff"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="125dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="200dp" />

    </android.support.v7.widget.CardView>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request for Advising"
        android:id="@+id/btnRequest"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>